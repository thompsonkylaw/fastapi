{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile",
    "config": {
      "PORT": "8000",
      "PYTHONUNBUFFERED": "1"
    }
  },
  "deploy": {
    "startCommand": "uvicorn main:app --host 0.0.0.0 --port $PORT",
    "restartPolicy": {
      "maxRetries": 3,
      "delaySeconds": 5
    }
  }
}